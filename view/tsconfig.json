{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./source/src",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "plugins": [
            { "transform": "ts-transformer-keys/transformer" }
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    }
}
